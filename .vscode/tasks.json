{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: cl.exe -O2",
      "command": "cl.exe",
      // All args https://learn.microsoft.com/en-us/cpp/build/reference/compiler-options-listed-alphabetically?view=msvc-170
      "args": [
        "/EHsc", // exception handling https://learn.microsoft.com/en-us/cpp/build/reference/eh-exception-handling-model?view=msvc-170
        "/nologo", // https://learn.microsoft.com/en-us/cpp/build/reference/nologo-suppress-startup-banner-c-cpp?view=msvc-170
        "/std:c++20", // https://stackoverflow.com/a/71883893
        "/F66060288", // Stack Size https://stackoverflow.com/questions/71363988/change-stack-size-in-vscode#:~:text=F%20command%20parameter%3A-,cl.exe%20/F27000000,-/Zi%20/EHsc%20/Fe
        "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe", // Rename .exe file https://learn.microsoft.com/en-us/cpp/build/reference/fe-name-exe-file?view=msvc-170
        "${file}",
        "/Zi" // debug mode https://learn.microsoft.com/en-us/cpp/build/reference/z7-zi-zi-debug-information-format?view=msvc-170
        // "/O2", // Optimization https://learn.microsoft.com/en-us/cpp/build/reference/o1-o2-minimize-size-maximize-speed?view=msvc-170
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$msCompile"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger.",
      "presentation": {
        "echo": true,
        "reveal": "always",
        // "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    }
  ],
  "version": "2.0.0"
}
