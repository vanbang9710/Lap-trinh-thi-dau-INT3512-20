{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: cl.exe build and debug active file",
      "command": "cl.exe",
      "args": [
        "/Zi",
        "/EHsc",
        "/nologo",
        "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
        "${file}",
        "/std:c++20",
        "/F 66060288"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$msCompile"],
      "group": {
        "kind": "build",
        // "isDefault": true
      },
      "detail": "Task generated by Debugger.",
      "presentation": {
        "echo": true,
        "reveal": "always",
        // "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "type": "cppbuild",
      "label": "C/C++: cl.exe build and run active file",
      "command": "cl.exe",
      "args": [
        // "/Zi",
        "/EHsc",
        "/nologo",
        "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
        "${file}",
        "/std:c++20",
        "/F 66060288",
        "/O2"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$msCompile"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    }
  ],
  "version": "2.0.0"
}
